@model DevCode.webapp.Models.HomeVM
@using DevCode.webapp.Util
@{
    ViewBag.Title = "Home Page";
    ViewBag.Css = "Form";
}
<main class="main-container-home">
    <section class="hero-section">
        <div class="container">
            <div class="hero-box grid grid--2--cols">
                <div class="hero-content">
                    <h1 class="primary-heading">Bem-vindo(a)</h1>
                    <p class="hero-text">
                        Seja bem-vindo(a) ao nosso fórum de programação<br />
                        - onde ideias viram código e problemas se transformam em
                        soluções!
                    </p>
                    <a class="btn-full btn-hero" href="/Usuario/Novo">Criar conta</a>
                </div>
                <div class="hero-img-box centered">
                    <img class="hero-img"
                         src="~/Content/imgs/hero/notebook.png"
                         alt="Imagem de um notebook" />
                </div>
            </div>
        </div>
        <i class="ph-mouse-simple icon-header"></i>
    </section>
    <section class="news-section section">
        <div class="container">
            <div class="news-header">
                <h2 class="secondary-heading">Notícias</h2>
                <a class="news-show-action" href="/noticia/ListarNoticias">Mostrar tudo &rarr;</a>
            </div>

            <div class="news-box">
                @foreach (var noticias in Model.Noticias)
                {
                    <div class="news-card">
                        <div class="news-img-box">
                            <img class="news-img"
                                 src="~/Content/imgs/noticia/noticia1.jpg"
                                 alt="Imagem de noticia" />
                        </div>
                        <div class="news-content">
                            <h3 class="tertiary-heading">@noticias.Titulo</h3>
                            <p class="common-text news-text">
                                @noticias.DetalhesAbreviada
                            </p>
                            <div class="news-card-footer">
                                <div class="news-info-box">
                                    <div class="news-info-content">
                                        <i class="ph-chat-dots news-icon"></i>
                                        <span class="news-info news-comments">@noticias.Likes</span>
                                    </div>
                                    <div class="news-info-content">
                                        <i class="ph-eye news-icon"></i>
                                        <span class="news-info news-views">20k</span>
                                    </div>
                                </div>
                                <span class="news-time-released">@noticias.DataEnvio</span>
                            </div>
                        </div>
                    </div>
                }      
            </div>
        </div>
    </section>
    <section class="question-section section">
        <div class="container">
            <h2 class="secondary-heading">Perguntas</h2>
            <div class="question-box">
                @foreach (var perguntas in Model.Perguntas)
                {

                    <div class="question-card">
                        <div class="question-content">
                            <div class="tags-card-news-box">
                                <span class="tag-news @perguntas.TagPrincipal">@perguntas.TagPrincipal</span>
                                <span class="tag-news @perguntas.TagSecundaria">@perguntas.TagSecundaria</span>

                            </div>
                            <h3 class="tertiary-heading">
                                @perguntas.Titulo
                            </h3>
                            <p class="common-text question-text">
                                @perguntas.DetalhesAbreviada
                            </p>
                            <div class="question-card-footer">
                                <div class="question-info-box">
                                    <div class="question-info-content">
                                        <i class="ph-chat-dots question-icon"></i>
                                        <span class="question-info question-comments"> @perguntas.Comments</span>
                                    </div>
                                    <div class="question-info-content">
                                        <i class="ph-eye question-icon"></i>
                                        <span class="question-info question-views">@perguntas.Views</span>
                                    </div>
                                </div>
                                <span class="question-time-released">@perguntas.DataEnvio</span>
                            </div>
                        </div>
                    </div>
                }
            </div>

                <div class="box-btn-footer">
                    <a class="btn-outline" href="/Perguntas/Index">Ver mais</a>
                </div>
            </div>

    </section>
    <section class="login-section element-hidden">
        <form class="form-login-sign-in home-form" method="post">
            @Html.AntiForgeryToken()
            <h3 class="form-heading">Bem vindo de volta</h3>
            <div class="form-content">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-input-label-box">
                    @Html.LabelFor(model => model.UsuarioVM.Username, htmlAttributes: new { @class = "label-form" })

                    @Html.EditorFor(model => model.UsuarioVM.Username, new { htmlAttributes = new { @class = "input-form-sign input-enter" } })
                    @Html.ValidationMessageFor(model => model.UsuarioVM.Username, "", new { @class = "text-danger" })
                    <i class="ph-user form-icon"></i>
                </div>

                <div class="form-input-label-box">
                    @Html.LabelFor(model => model.UsuarioVM.Senha, htmlAttributes: new { @class = "label-form" })


                    @Html.PasswordFor(model => model.UsuarioVM.Senha, new { @class = "input-form-sign input-enter" })
                    @Html.ValidationMessageFor(model => model.UsuarioVM.Senha, "", new { @class = "text-danger" })
                    <i class="ph ph-lock-key form-icon"></i>
                </div>



                <button class="btn-full btn-form">Entrar</button>

                <div class="divider-box">
                    <span class="divider"></span>
                    <p>ou</p>
                    <span class="divider"></span>
                </div>



                <div class="enter-with-box">
                    <div class="logo-box-form">
                        <img src="~/Content/imgs/form/google-logo.png"
                             alt="logo da google"
                             class="form-logo-img" />
                    </div>
                    <div class="logo-box-form">
                        <img src="~/Content/imgs/form/facebook-logo.png"
                             alt="logo da facebook"
                             class="form-logo-img" />
                    </div>
                    <div class="logo-box-form">
                        <img src="~/Content/imgs/form/microsoft-logo.png"
                             alt="logo da microsoft"
                             class="form-logo-img" />
                    </div>
                </div>

                <div class="does-not-have-accont-box">
                    <p>Não tem conta?</p>
                    <a href="/Usuario/Novo" class="form-link">Criar a sua agora</a>
                </div>
            </div>
        </form>
    </section>
</main>
<script src="~/Scripts/script.js"></script>