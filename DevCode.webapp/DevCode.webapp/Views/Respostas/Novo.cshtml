@model DevCode.webapp.Models.ResponderPeguntaVM

@{
    ViewBag.Title = "Novo";
}

<main class="main-container">
    <div class="container">
        <div class="layout-box">
            @Html.Partial("_ViewUsuario")
            <section class="section-answer">
                <div class="tags-card-news-box">
                    <span class="tag-news js">JavaScript</span>
                    <span class="tag-news c">C#</span>
                    <span class="tag-news php">PHP</span>
                    <span class="tag-news py">Python</span>
                </div>
                <div class="answer-section">
                    <div class="question-box-answer">
                        <div class="answer-user-box">
                            <div class="answer-box-info">
                                <img src="~/Content/imgs/form/background-img.jpg"
                                     class="answer-user-photo" />
                                <p class="username-text">@Model.Pergunta.IDUsuarioPergunta</p>
                            </div>
                        </div>
                        <div class="question-title">
                            <h2 class="tertiary-heading">
                                @Model.Pergunta.Titulo
                            </h2>
                        </div>
                        <div class="question-text">
                            <p class="question-description">
                                @Model.Pergunta.Detalhes
                            </p>

                            <p class="expected-text">@Model.Pergunta.Esperado</p>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="anwser-box">
                            <div class="answer-user-box">
                                <div class="answer-box-info">
                                    <img src="~/Content/imgs/form/background-img.jpg"
                                         class="answer-user-photo" />
                                    <p class="username-text">Username</p>
                                </div>
                            </div>
                            <div class="form-answer">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="description-box">
                                    @Html.LabelFor(model => model.Respostas.ExplicacaoResposta, htmlAttributes: new { @class = "input-label" })
                                    @Html.TextAreaFor(model => model.Respostas.ExplicacaoResposta, 10, 65, htmlAttributes: new { @class = "description-text input-form" })
                                    @Html.ValidationMessageFor(model => model.Respostas.ExplicacaoResposta, "", new { @class = "text-danger" })
                                </div>
                                <div class="btn-form-box">
                                    <button class="btn-full btn-form">Publicar</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
