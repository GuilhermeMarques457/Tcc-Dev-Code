                                @Model.Pergunta.Titulo
                            </h2>
                        </div>
                        <div class="question-text">
                            <p class="question-description">
                               @Model.Pergunta.Detalhes
                            </p>

                            <p class="expected-text">@Model.Pergunta.Esperado</p>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="anwser-box">
                            <div class="answer-user-box">
                                <div class="answer-box-info">
                                    <img src="/Login & Sign-in Page/imgs/form/background-img.jpg"
                                         class="answer-user-photo" />
                                    <p class="username-text">Username</p>
                                </div>
                            </div>
                            <div class="form-answer">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="description-box">
                                    @Html.LabelFor(model => model.Respostas.ExplicacaoResposta, htmlAttributes: new { @class = "input-label" })
                                    @Html.TextAreaFor(model => model.Respostas.ExplicacaoResposta, 10, 65, htmlAttributes: new { @class = "description-text input-form" })
                                    @Html.ValidationMessageFor(model => model.Respostas.ExplicacaoResposta, "", new { @class = "text-danger" })
                                </div>
                                <div class="btn-form-box">
                                    <button class="btn-full btn-form">Publicar</button>
                                </div>
                            </div>
                        </div>
                    }
