@using DevCode.webapp.Util;
@using DevCode.webapp.Models;
@model DevCode.webapp.Models.Respostas

@{
    ViewBag.Title = "Novo";
}

<main class="main-container">
    <div class="container">
        <div class="layout-box">
            @Html.Partial("_ViewUsuario")
            <section class="section-answer">
                <div class="tags-card-news-box">
                    <span class="tag-news js">JavaScript</span>
                    <span class="tag-news c">C#</span>
                    <span class="tag-news php">PHP</span>
                    <span class="tag-news py">Python</span>
                </div>
                <div class="answer-section">
                    @{
                        Perguntas perguntaModel = ViewBag.PeguntaModel;
                        @Html.Partial("_ViewPergunta", perguntaModel);
                    }

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="anwser-box">
                            <div class="answer-user-box">
                                <div class="answer-box-info">
                                    <img src="@Configuracao.Usuario.CaminhoImagemPerfil"
                                         class="answer-user-photo" />
                                    <p class="username-text">@Configuracao.Usuario.Username</p>
                                </div>
                            </div>
                            <div class="form-answer">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="description-box">
                                    @Html.LabelFor(model => model.ExplicacaoResposta, htmlAttributes: new { @class = "input-label" })
                                    @Html.TextAreaFor(model => model.ExplicacaoResposta, 10, 65, htmlAttributes: new { @class = "description-text input-form" })
                                    @Html.ValidationMessageFor(model => model.ExplicacaoResposta, "", new { @class = "text-danger" })
                                </div>
                                <div class="btn-form-box">
                                    <button class="btn-full btn-form">Publicar</button>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="IDUsuarioResposta" name="IDUsuarioResposta" value="@Configuracao.Usuario.IDUsuario" />
                        <input type="hidden" id="IDPergunta" name="IDPergunta" value="@ViewBag.IdPergunta" />

